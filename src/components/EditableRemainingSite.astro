---
const { site } = Astro.props;

const businessName = site?.businessName || 'English Plumber';
const baseCity = site?.baseCity || 'Medemblik';
const primaryArea = site?.primaryArea || 'Hoorn, Heerhugowaard, Purmerend, Alkmaar';
const whatsappNumber = site?.whatsappNumber || '+31 6 428 699 31';
const whatsappUrl = site?.headerWhatsappUrl || site?.heroPrimaryCtaUrl || 'https://wa.me/31642869931';

const testimonialsHeading = site?.testimonialsHeading || 'Trusted by local homes';
const testimonialsHeadingAccent = site?.testimonialsHeadingAccent || 'for plumbing and heating';

const defaultTestimonials = [
  {
    name: 'Cathy F.',
    area: `${baseCity}`,
    quote: 'Quick response, clear communication in English, and the repair was done cleanly.',
    imagePath: '/assets/images/imported/ellipse-1978.png',
  },
  {
    name: 'Brenda M.',
    area: 'Hoorn',
    quote: 'Friendly service and transparent pricing. My radiator issue was fixed quickly and everything was explained clearly.',
    imagePath: '/assets/images/imported/testimonial-photo-4.webp',
  },
  {
    name: 'Mark L.',
    area: 'Purmerend',
    quote: 'Boiler servicing was smooth and professional. Heating is stable again and communication over WhatsApp made everything easy.',
    imagePath: '/assets/images/imported/ellipse-1979.png',
  },
  {
    name: 'Angela D.',
    area: 'Alkmaar',
    quote: 'Great option for expats in North Holland. Easy to share photos on WhatsApp and book the right visit quickly.',
    imagePath: '/assets/images/imported/testimonial-photo-4.webp',
  },
];

const testimonials =
  Array.isArray(site?.testimonialsList) && site.testimonialsList.length > 0
    ? site.testimonialsList
    : defaultTestimonials;

const commandCenterHeading = site?.commandCenterHeading || 'Your Plumbing Command Center,';
const commandCenterHeadingAccent = site?.commandCenterHeadingAccent || 'All in one place.';
const commandCenterBody =
  site?.commandCenterBody ||
  `Send photos and short videos on WhatsApp. ${businessName} reviews the issue, shares a clear quote, and books your visit quickly.`;
const commandCenterImagePath = site?.commandCenterImagePath || '/IMG_8233.PNG';
const commandCenterImageAlt = site?.commandCenterImageAlt || 'Plumber service overview';

const howItWorksHeading = site?.howItWorksHeading || 'How';
const howItWorksHeadingAccent = site?.howItWorksHeadingAccent || 'it works';
const howItWorksImagePath = site?.howItWorksImagePath || '/assets/images/imported/miles-bloodwork.webp';
const howItWorksImageAlt = site?.howItWorksImageAlt || 'Our Process';

const defaultSteps = [
  {
    title: 'Send Photos on WhatsApp',
    description: 'Share photos or a short video of the issue and your postcode.',
  },
  {
    title: 'Problem Review',
    description: 'We review the issue and recommend the best repair approach.',
  },
  {
    title: 'Clear Quote & Plan',
    description: 'You get transparent pricing: 95 EUR per hour labour and 145 EUR for boiler servicing.',
  },
  {
    title: 'Repair & Follow-Up',
    description: 'We complete the job cleanly and stay available for follow-up questions.',
  },
];

const steps =
  Array.isArray(site?.howItWorksSteps) && site.howItWorksSteps.length > 0
    ? site.howItWorksSteps
    : defaultSteps;

const pricingHeading = site?.pricingHeading || 'Choose Your Service';
const pricingSubheading =
  site?.pricingSubheading || `Plumbing and heating support tailored for homes in and around ${baseCity}.`;

const defaultPlans = [
  {
    name: 'Standard',
    subtitle: 'General plumbing visit',
    price: '95 EUR / hour',
    note: 'Boiler servicing: 145 EUR',
    badge: 'Most Requested',
    features: [
      'Boiler, tap and radiator repairs',
      'No drain services',
      `Home visits in ${baseCity} area`,
      'Clear diagnosis and repair plan',
    ],
  },
  {
    name: 'Heating Focus',
    subtitle: 'Ideal for boiler and radiator issues',
    price: '95 EUR / hour',
    note: 'Detailed heating diagnosis',
    badge: '',
    features: [
      'Boiler brands: Vaillant, Intergas, Remeha, ATAG',
      'Flexible appointment windows',
      'Free no-obligation quote',
      'Fair parts pricing',
    ],
  },
  {
    name: 'Landlord Support',
    subtitle: 'Planned support for rental homes',
    price: `Primary area: ${primaryArea}`,
    note: 'WhatsApp for fast triage',
    badge: '',
    features: [
      'Radiator installation and repair',
      'Tap repair and replacement',
      'General plumbing handyman',
      'Follow-up support over WhatsApp',
    ],
  },
];

const plans =
  Array.isArray(site?.pricingPlans) && site.pricingPlans.length > 0
    ? site.pricingPlans
    : defaultPlans;

const faqHeading = site?.faqHeading || 'Frequently Asked';
const faqHeadingAccent = site?.faqHeadingAccent || 'Plumbing Questions';
const faqImagePath = site?.faqImagePath || '/assets/images/imported/faq.webp';
const faqImageAlt = site?.faqImageAlt || 'FAQ support';
const faqCtaHeading = site?.faqCtaHeading || 'Still have questions?';
const faqCtaBody =
  site?.faqCtaBody || 'Send a WhatsApp message and include photos of the problem.';
const faqCtaLabel = site?.faqCtaLabel || 'WhatsApp us';
const faqCtaUrl = site?.faqCtaUrl || whatsappUrl;

const defaultFaqs = [
  {
    question: `Where does ${businessName} provide service?`,
    answer: `Primary service area includes ${baseCity}, ${primaryArea}. Nearby towns within about 40km are also possible.`,
  },
  {
    question: 'Do you work in Amsterdam or Almere?',
    answer: 'Not based in Amsterdam or Almere. If your location is nearby, send a WhatsApp message and we can confirm availability.',
  },
  {
    question: 'What services do you offer?',
    answer:
      'Boiler servicing, radiator installation and repair, tap repair and replacement, and general plumbing handyman work. We do not offer drain services.',
  },
  {
    question: 'How does pricing work?',
    answer:
      '95 EUR per hour labour, 145 EUR for boiler servicing, and free quotes. WhatsApp photos and text for a fast first assessment.',
  },
];

const faqs =
  Array.isArray(site?.faqList) && site.faqList.length > 0 ? site.faqList : defaultFaqs;

const aboutHeading = site?.aboutHeading || 'Built Around';
const aboutHeadingAccent = site?.aboutHeadingAccent || 'Clear, Reliable Service';
const aboutBody =
  site?.aboutBody ||
  `${businessName} was built to give expats and Dutch homeowners a reliable plumber with clear communication, fair pricing, and quality workmanship.`;
const aboutImagePath = site?.aboutImagePath || '/assets/images/imported/nate-plus-fam.png';
const aboutImageAlt = site?.aboutImageAlt || 'Founder';
const aboutName = site?.aboutName || businessName;
const aboutRole = site?.aboutRole || `Friendly local plumber in ${baseCity}`;
const aboutCtaLabel = site?.aboutCtaLabel || 'Book Your Visit';
const aboutCtaUrl = site?.aboutCtaUrl || whatsappUrl;

const connectedHeading = site?.connectedHeading || 'Quickly Connected';
const connectedHeadingAccent = site?.connectedHeadingAccent || 'to Your Home';
const connectedCtaLabel = site?.connectedCtaLabel || 'Message on WhatsApp';
const connectedCtaUrl = site?.connectedCtaUrl || whatsappUrl;

const finalCtaImagePath = site?.finalCtaImagePath || '/assets/images/imported/woman-newsletter.jpg';
const finalCtaImageAlt = site?.finalCtaImageAlt || 'Final CTA';
const finalCtaHeading = site?.finalCtaHeading || 'Ready for fast plumbing help?';
const finalCtaHeadingAccent =
  site?.finalCtaHeadingAccent || 'Send photos on WhatsApp and get a clear plan.';
const finalCtaBody =
  site?.finalCtaBody ||
  'From boiler issues to leaking taps, we help you solve problems before they become expensive.';
const finalCtaButtonLabel = site?.finalCtaButtonLabel || `WhatsApp ${whatsappNumber}`;
const finalCtaButtonUrl = site?.finalCtaButtonUrl || whatsappUrl;

const footerDescription =
  site?.footerDescription ||
  `${businessName} provides plumbing and heating services in North Holland. Final scope and parts pricing are confirmed after assessment. Emergency 24/7 callouts are not offered.`;
const footerSupportTitle = site?.footerSupportTitle || 'Help & Support';
const footerAboutTitle = site?.footerAboutTitle || `About ${businessName}`;
const footerCopyright =
  site?.footerCopyright || `Â© ${new Date().getFullYear()} ${businessName} | All Rights Reserved`;
const footerNote = site?.footerNote || 'WhatsApp is the fastest way to reach us.';
const footerLogoPath = site?.footerLogoPath || '/logo-blue.svg';
const footerBigLogoPath = site?.footerBigLogoPath || '/big-logo.svg';
const footerLogoAlt = site?.footerLogoAlt || `${businessName} logo`;
const footerBigLogoAlt = site?.footerBigLogoAlt || `${businessName} logo`;

const defaultFooterSupportLinks = [
  { label: 'Contact Us', href: whatsappUrl },
  { label: 'FAQs', href: '#faq' },
  { label: 'Pricing', href: '#pricing' },
  { label: 'Services', href: '#services' },
];

const footerSupportLinks =
  Array.isArray(site?.footerSupportLinks) && site.footerSupportLinks.length > 0
    ? site.footerSupportLinks
    : defaultFooterSupportLinks;

const defaultFooterAboutLinks = [
  { label: 'About Us', href: '#about' },
  { label: 'Service Area', href: '#service-area' },
  { label: 'WhatsApp', href: whatsappUrl },
];

const footerAboutLinks =
  Array.isArray(site?.footerAboutLinks) && site.footerAboutLinks.length > 0
    ? site.footerAboutLinks
    : defaultFooterAboutLinks;
---

<div class="mb-[78px] lg:mb-[263px] mt-[87px] lg:mt-[188px]" id="service-area" data-native-remaining="true">
  <div class="lg:container max-lg:px-4 overflow-hidden">
    <h2 class="capitalize font-450 whitespace-nowrap text-heading">
      <span class="whitespace-pre-wrap" data-site-field="testimonialsHeading">{testimonialsHeading}</span>
      <br />
      <em class="whitespace-pre-wrap font-victorSerif font-medium italic text-heading" data-site-field="testimonialsHeadingAccent">
        {testimonialsHeadingAccent}
      </em>
    </h2>

    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4 mt-[42px]" data-site-field="testimonialsList">
      {testimonials.map((item, index) => (
        <div class="w-full p-4 rounded-2xl text-[#52525B] bg-grey-100 transition-all duration-300 ease-in-out min-h-[169px]" data-site-field={`testimonialsList.${index}`}>
          <div class="relative z-10 flex items-center gap-2">
            <img
              alt={`Profile ${item.name}`}
              loading="lazy"
              width="40"
              height="40"
              decoding="async"
              class="shrink-0 size-10 object-cover rounded-full"
              src={item.imagePath}
              data-site-field={`testimonialsList.${index}.imagePath`}
            />
            <div class="flex flex-col gap-[2px]">
              <div class="flex items-center gap-1">
                <span class="text-sm" data-site-field={`testimonialsList.${index}.name`}>{item.name}</span>
              </div>
              <span class="text-xs text-[#71717A]" data-site-field={`testimonialsList.${index}.area`}>{item.area}</span>
            </div>
          </div>
          <p class="mt-4 text-sm text-[#71717A]" data-site-field={`testimonialsList.${index}.quote`}>{item.quote}</p>
        </div>
      ))}
    </div>
  </div>
</div>

<div class="mb-[127px] lg:mb-[167px]" id="services">
  <div class="lg:container max-lg:px-4 xl:px-[115px]">
    <h2 class="font-450 text-center text-heading">
      <span class="whitespace-pre-wrap" data-site-field="commandCenterHeading">{commandCenterHeading}</span>
      <br />
      <em class="whitespace-pre-wrap font-victorSerif capitalize font-medium text-heading" data-site-field="commandCenterHeadingAccent">
        {commandCenterHeadingAccent}
      </em>
    </h2>
    <p class="text-center text-muted-foreground mt-4 max-w-[900px] mx-auto" data-site-field="commandCenterBody">
      {commandCenterBody}
    </p>
    <div class="mt-10 rounded-[14px] overflow-hidden h-[360px] lg:h-[520px]" data-site-field="commandCenterImagePath">
      <img
        alt={commandCenterImageAlt}
        loading="lazy"
        width="1200"
        height="700"
        decoding="async"
        class="w-full h-full object-cover"
        src={commandCenterImagePath}
        data-site-field="commandCenterImageAlt"
      />
    </div>
  </div>
</div>

<div class="mb-24 lg:mb-30" id="how-it-works">
  <div class="lg:container max-lg:px-4">
    <div class="flex flex-col lg:flex-row gap-10 lg:gap-12 items-start">
      <div
        style="background:linear-gradient(190deg, #A7DAFF 7.44%, #3DA3ED 97.69%)"
        class="h-[420px] lg:h-[640px] w-full lg:w-[600px] rounded-[14px] bg-grey-100 relative flex items-center justify-center"
        data-site-field="howItWorksImagePath"
      >
        <img
          alt={howItWorksImageAlt}
          loading="lazy"
          width="640"
          height="600"
          decoding="async"
          class="rounded-[14px] absolute object-cover w-full h-full"
          src={howItWorksImagePath}
          data-site-field="howItWorksImageAlt"
        />
      </div>

      <div class="flex-1">
        <h3 class="text-4xl lg:text-[48px] font-450 capitalize mb-6 lg:mb-10">
          <span data-site-field="howItWorksHeading">{howItWorksHeading}</span>{' '}
          <em class="font-victorSerif font-medium italic" data-site-field="howItWorksHeadingAccent">{howItWorksHeadingAccent}</em>
        </h3>
        <div class="flex flex-col gap-4 lg:gap-6" data-site-field="howItWorksSteps">
          {steps.map((step, index) => (
            <div class="flex flex-col" data-site-field={`howItWorksSteps.${index}`}>
              <div>
                <p class="text-xl font-400 inline text-primary-blue-zodiac">{`0${index + 1}`}/</p>
                <span class="text-2xl lg:text-[36px] font-400 capitalize ml-2 text-primary-blue-zodiac" data-site-field={`howItWorksSteps.${index}.title`}>
                  {step.title}
                </span>
              </div>
              <div class="overflow-hidden mb-0 mt-3.5" style="max-height:200px">
                <p class="font-400 text-grey-500 lg:text-xl text-lg" data-site-field={`howItWorksSteps.${index}.description`}>
                  {step.description}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</div>

<div class="mt-24 lg:mt-30 mb-24 lg:mb-30" id="pricing">
  <div class="lg:container max-lg:px-4">
    <h2 class="text-blueZodiac font-medium italic font-victorSerif text-heading-sm" data-site-field="pricingHeading">{pricingHeading}</h2>
    <p class="capitalize mt-2 text-blueZodiac font-450 text-sm sm:text-base" data-site-field="pricingSubheading">
      {pricingSubheading}
    </p>
    <div class="grid lg:grid-cols-3 gap-8 mt-10" data-site-field="pricingPlans">
      {plans.map((plan, index) => (
        <div class="flex flex-col h-full gap-6 relative" data-site-field={`pricingPlans.${index}`}>
          {plan.badge && (
            <span class="absolute -top-3 left-1/2 -translate-x-1/2 text-xs rounded-full bg-blueZodiac text-white px-4 py-1" data-site-field={`pricingPlans.${index}.badge`}>
              {plan.badge}
            </span>
          )}
          <div class="bg-grey-50 p-6 h-full border-[0.5px] border-grey-150 rounded-2xl">
            <h3 class="text-[42px] font-450 text-center" data-site-field={`pricingPlans.${index}.name`}>
              {plan.name}
            </h3>
            <p class="capitalize text-center text-sm" data-site-field={`pricingPlans.${index}.subtitle`}>{plan.subtitle}</p>
            <h3 class="text-center italic font-victorSerif font-semibold text-[40px] text-blueZodiac mt-4" data-site-field={`pricingPlans.${index}.price`}>
              {plan.price}
            </h3>
            <p class="text-center italic font-victorSerif font-semibold text-xl text-blueZodiac mb-4" data-site-field={`pricingPlans.${index}.note`}>
              {plan.note}
            </p>
            <ul class="mt-4 flex flex-col gap-3 text-sm text-[#3f3f46]">
              {plan.features.map((feature, featureIndex) => (
                <li class="flex items-start gap-2">
                  <span class="mt-1 size-1.5 rounded-full bg-blueZodiac shrink-0"></span>
                  <span data-site-field={`pricingPlans.${index}.features.${featureIndex}`}>{feature}</span>
                </li>
              ))}
            </ul>
            <div class="mt-6">
              <a
                class="relative inline-flex w-full items-center cursor-pointer justify-center whitespace-nowrap rounded-full transition-all font-aspekta h-[51px] px-[42px] py-3 text-base bg-blueZodiac text-skyBlue hover:bg-blueZodiac/90 active:bg-blueZodiac font-medium"
                href={plan?.buttonUrl || whatsappUrl}
                data-site-field={`pricingPlans.${index}.buttonUrl`}
              >
                <span data-site-field={`pricingPlans.${index}.buttonLabel`}>{plan?.buttonLabel || 'WhatsApp Quote'}</span>
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</div>

<div class="mb-[157px] lg:mb-[188px]" id="faq">
  <div class="lg:container max-lg:px-4 grid lg:grid-cols-[1.2fr_0.8fr] gap-8 lg:gap-12 items-start">
    <div>
      <h3 class="text-4xl lg:text-[48px] font-450 mb-6">
        <span data-site-field="faqHeading">{faqHeading}</span>{' '}
        <em class="font-victorSerif font-medium italic" data-site-field="faqHeadingAccent">{faqHeadingAccent}</em>
      </h3>
      <div class="flex flex-col gap-4" data-site-field="faqList">
        {faqs.map((item, index) => (
          <details class="bg-grey-50 border border-grey-150 rounded-2xl p-5 group" data-site-field={`faqList.${index}`}>
            <summary class="cursor-pointer list-none font-500 text-blueZodiac flex items-center justify-between gap-4">
              <span data-site-field={`faqList.${index}.question`}>{item.question}</span>
              <span class="text-xl leading-none group-open:rotate-45 transition-transform">+</span>
            </summary>
            <p class="mt-3 text-[#6a6e70]" data-site-field={`faqList.${index}.answer`}>{item.answer}</p>
          </details>
        ))}
      </div>
    </div>

    <div class="lg:pt-[58px]">
      <div class="rounded-2xl overflow-hidden" data-site-field="faqImagePath">
        <img
          alt={faqImageAlt}
          loading="lazy"
          width="452"
          height="276"
          decoding="async"
          class="w-full h-full object-cover rounded-2xl"
          src={faqImagePath}
          data-site-field="faqImageAlt"
        />
      </div>
      <div
        style="box-shadow:-9px 88px 36px 0 rgba(0, 0, 0, 0.01), -5px 50px 30px 0 rgba(0, 0, 0, 0.05), -2px 22px 22px 0 rgba(0, 0, 0, 0.09), -1px 6px 12px 0 rgba(0, 0, 0, 0.10);border:1px solid rgba(255, 255, 255, 0.15);background:rgba(0, 0, 0, 0.10);backdrop-filter:blur(69.5px)"
        class="py-6 relative z-10 px-[42px] rounded-2xl text-center flex flex-col items-center justify-center gap-4 -mt-10"
      >
        <div>
          <h5 class="font-medium text-xl text-white" data-site-field="faqCtaHeading">{faqCtaHeading}</h5>
          <p class="italic text-grey-100 mt-1 font-victorSerif font-medium" data-site-field="faqCtaBody">{faqCtaBody}</p>
        </div>
        <a
          style="border-radius:1920px;border:1px solid rgba(4, 21, 39, 0.10);background:rgba(255, 255, 255, 0.33);box-shadow:0 4px 15px 0 rgba(0, 0, 0, 0.05)"
          class="flex items-center text-white font-medium justify-center gap-3 py-5 px-10 rounded-full"
          href={faqCtaUrl}
          data-site-field="faqCtaUrl"
        >
          <span class="whitespace-nowrap" data-site-field="faqCtaLabel">{faqCtaLabel}</span>
        </a>
      </div>
    </div>
  </div>
</div>

<div class="mb-[78px] lg:mb-[123px] mt-[78px] lg:mt-[188px]" id="about">
  <div class="lg:container max-lg:px-4 flex flex-col lg:flex-row items-center justify-between gap-10 lg:gap-[90px]">
    <div class="max-lg:order-2">
      <div class="rounded-[14px] overflow-hidden h-[544px]" data-site-field="aboutImagePath">
        <img
          alt={aboutImageAlt}
          loading="lazy"
          width="519"
          height="544"
          decoding="async"
          class="w-full lg:w-[519px] h-[544px] object-cover"
          src={aboutImagePath}
          data-site-field="aboutImageAlt"
        />
      </div>
      <h3 class="mt-5 text-balticSea text-xl" data-site-field="aboutName">{aboutName}</h3>
      <p class="text-grey-500 italic font-medium font-victorSerif text-xl" data-site-field="aboutRole">{aboutRole}</p>
    </div>

    <div class="max-lg:order-1">
      <h2 class="font-450 text-heading">
        <span class="whitespace-pre-wrap" data-site-field="aboutHeading">{aboutHeading}</span>
        <br />
        <em class="whitespace-pre-wrap font-victorSerif font-medium text-heading" data-site-field="aboutHeadingAccent">
          {aboutHeadingAccent}
        </em>
      </h2>
      <p class="text-muted-foreground mt-4 max-w-[620px]" data-site-field="aboutBody">
        {aboutBody}
      </p>
      <div class="mt-8">
        <div class="relative rounded-full w-fit">
          <div
            class="absolute inset-0 z-[1] rounded-full pointer-events-none"
            style="padding:1.44px;background:linear-gradient(0deg, rgba(0, 15, 31, 0) 0%, rgba(0, 15, 31, 0.66) 49%, rgba(0, 15, 31, 0) 100%);-webkit-mask:linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);-webkit-mask-composite:xor;mask-composite:exclude;will-change:transform"
          ></div>
          <div
            class="absolute inset-[1.44px] z-[2] rounded-full pointer-events-none"
            style="padding:1.44px;background:linear-gradient(180deg, rgba(255,255,255,0.25) 0%, rgba(255,255,255,0) 49%, rgba(255,255,255,0.15) 100%);-webkit-mask:linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);-webkit-mask-composite:xor;mask-composite:exclude;will-change:transform"
          ></div>
          <a
            class="relative inline-flex w-full items-center cursor-pointer justify-center whitespace-nowrap rounded-full transition-all font-aspekta h-[51px] px-[42px] py-3 text-base bg-blueZodiac text-skyBlue hover:bg-blueZodiac/90 active:bg-blueZodiac font-medium"
            href={aboutCtaUrl}
            data-site-field="aboutCtaUrl"
          >
            <span data-site-field="aboutCtaLabel">{aboutCtaLabel}</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="mb-[78px] lg:mb-[123px] mt-[78px] lg:mt-[263px]">
  <div class="lg:container max-lg:px-4">
    <div class="flex flex-col max-lg:gap-10 lg:flex-row items-start justify-between">
      <h2 class="font-450 text-heading">
        <span data-site-field="connectedHeading">{connectedHeading}</span>
        <br />
        <em class="font-victorSerif font-medium italic text-heading" data-site-field="connectedHeadingAccent">{connectedHeadingAccent}</em>
      </h2>
      <div class="group relative rounded-full w-fit bg-[#D5EFFF] [--btn-bg:#D5EFFF] hover:[--btn-bg:#C0E7FF] active:[--btn-bg:#C0E7FF] transition-colors duration-200">
        <div
          class="relative rounded-full border-[1.44px] border-transparent overflow-hidden shadow-buttonPrimary bg-[var(--btn-bg)]"
          style="background:linear-gradient(var(--btn-bg), var(--btn-bg)) padding-box, linear-gradient(180deg, rgba(47,145,202,0) 0%, rgba(47,145,202,0.66) 49%, rgba(47,145,202,0) 100%) border-box"
        >
